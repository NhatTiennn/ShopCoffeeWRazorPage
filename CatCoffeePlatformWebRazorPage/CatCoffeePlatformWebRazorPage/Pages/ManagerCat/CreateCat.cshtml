@page
@model CatCoffeePlatformWebRazorPage.Pages.ManagerCat.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Cat</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cat.CatTypeId" class="control-label"></label>
                <select asp-for="Cat.CatTypeId" class ="form-control" asp-items="ViewBag.CatTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Cat.ShopId" class="control-label"></label>
                <select asp-for="Cat.ShopId" class ="form-control" asp-items="ViewBag.ShopId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Cat.CatName" class="control-label"></label>
                <input asp-for="Cat.CatName" class="form-control" />
                <span asp-validation-for="Cat.CatName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cat.ImageCat" class="control-label"></label>
                <input asp-for="Cat.ImageCat" class="form-control" />
                <span asp-validation-for="Cat.ImageCat" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Cat.Status" /> @Html.DisplayNameFor(model => model.Cat.Status)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./ManagerCat/ListCat">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
