@page
@model CatCoffeePlatformWebRazorPage.Pages.ManageTable.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Table</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Table.TableId" />
            <div class="form-group">
                <label asp-for="Table.ShopId" class="control-label"></label>
                <select asp-for="Table.ShopId" class="form-control" asp-items="ViewBag.ShopId"></select>
                <span asp-validation-for="Table.ShopId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Table.AreaId" class="control-label"></label>
                <select asp-for="Table.AreaId" class="form-control" asp-items="ViewBag.AreaId"></select>
                <span asp-validation-for="Table.AreaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Table.TableName" class="control-label"></label>
                <input asp-for="Table.TableName" class="form-control" />
                <span asp-validation-for="Table.TableName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Table.Status" /> @Html.DisplayNameFor(model => model.Table.Status)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
