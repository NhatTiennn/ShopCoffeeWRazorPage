                        <div class="p-4 pb-0 rounded-bottom">
                                <h4>@Html.DisplayFor(modelItem => item.ShopName)</h4>
                                <p>@Html.DisplayFor(modelItem => item.Address)</p>
                            <div class="d-flex justify-content-between flex-lg-wrap">
                                    <p class="text-dark fs-5 fw-bold">
                                        Start Time: @Html.DisplayFor(modelItem => item.StartTime)
                                        End Time: @Html.DisplayFor(modelItem => item.EndTime)
                                    </p>
                                 <a asp-page="./ShopDetails" asp-route-id="@item.ShopId" class="btn border border-secondary rounded-pill px-3 py-1 mb-4 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i>View Shop</a>
                            </div>
                        </div>
                        }
@*                     </div>
 *@                </div>
            </div>
        </div>
    </div>
