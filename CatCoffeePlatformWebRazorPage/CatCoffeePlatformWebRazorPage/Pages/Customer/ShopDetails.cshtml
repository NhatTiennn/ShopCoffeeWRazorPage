                                </a>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <h4 class="fw-bold mb-3">@Html.DisplayFor(model => model.ShopCoffeeCat.ShopName)</h4>
                            <p class="mb-3">
                                Address: @Html.DisplayFor(model => model.ShopCoffeeCat.Address)</br>
                                Start Time: @Html.DisplayFor(model => model.ShopCoffeeCat.StartTime)
                                End Time: @Html.DisplayFor(model => model.ShopCoffeeCat.EndTime)
                            </p>
