                            @if (Model.customer != null)
                            {
                                <a asp-page="Customer/BookingPage" asp-route-id="@Model.ShopCoffeeCat.ShopId" class="btn border border-secondary rounded-pill px-4 py-2 mb-4 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i> Book now</a>
                            }
                            else{
                                <a asp-page="/LoginPage/Login" class="btn border border-secondary rounded-pill px-4 py-2 mb-4 text-primary"><i class="fa fa-sign-in-alt me-2 text-primary"></i> Login to book</a>
                                }
                            </div>
                        <div class="col-lg-12">
                            <nav>
                                <div class="nav nav-tabs mb-3">
                                   
                                    <button class="nav-link active border-white border-bottom-0" type="button" role="tab"
                                            id="nav-cat-tab" data-bs-toggle="tab" data-bs-target="#nav-cat"
                                            aria-controls="nav-cat" aria-selected="false">
                                        Cats
                                    </button>
                                    <button class="nav-link border-white border-bottom-0" type="button" role="tab"
                                            id="nav-drink-tab" data-bs-toggle="tab" data-bs-target="#nav-drink"
                                            aria-controls="nav-mission" aria-selected="false">
                                        Drinks
                                    </button>
                                    <button class="nav-link border-white border-bottom-0" type="button" role="tab"
                                            id="nav-foodCat-tab" data-bs-toggle="tab" data-bs-target="#nav-foodCat"
                                            aria-controls="nav-mission" aria-selected="false">
                                        Food Cats
                                    </button>
                                </div>
                            </nav>
                            <div class="tab-content mb-5">
                                <div class="tab-pane active" id="nav-cat" role="tabpanel" aria-labelledby="nav-cat-tab">
                                    @foreach (var item in Model.Cats){
                                    <div class="d-flex">
                                        <img src="/img/Tabby.jpg" class="img-fluid rounded-circle p-3" style="width: 100px; height: 100px;" alt="">
                                        <div class="">
                                                <p class="mb-2" style="font-size: 14px;">@Html.DisplayFor(modelItem => item.CatType.CatTypeName)</p>
                                            <div class="d-flex justify-content-between">
                                                    <h5>@Html.DisplayFor(modelItem => item.CatName)</h5>
                                            </div>
                                            <p>
                                                    @Html.DisplayFor(modelItem => item.CatInfo)
                                            </p>
                                        </div>
                                    </div>
                                    }
                                </div>
                                <div class="tab-pane" id="nav-drink" role="tabpanel" aria-labelledby="nav-drink-tab">
                                     @foreach (var item in Model.Drinks){
                                    <div class="d-flex">
                                        <img src="/img/Drink.jpg" class="img-fluid rounded-circle p-3" style="width: 100px; height: 100px;" alt="">
                                        <div class="">
                                                <p class="mb-2" style="font-size: 14px;">@Html.DisplayFor(modelItem => item.Price) VND</p>
                                            <div class="d-flex justify-content-between">
                                                    <h5>@Html.DisplayFor(modelItem => item.DrinkName)</h5>
                                            </div>
                                            <p>
                                                    @Html.DisplayFor(modelItem => item.DinkInfo)
                                            </p>
                                        </div>
                                    </div>
                                    }
                                </div>
                                <div class="tab-pane" id="nav-foodCat" role="tabpanel" aria-labelledby="nav-foodCat-tab">
                                     @foreach (var item in Model.FoodForCats){
                                    <div class="d-flex">
                                        <img src="/img/foodCat.jpg" class="img-fluid rounded-circle p-3" style="width: 100px; height: 100px;" alt="">
                                        <div class="">
                                                <p class="mb-2" style="font-size: 14px;">@Html.DisplayFor(modelItem => item.FoodPrice) VND</p>
                                            <div class="d-flex justify-content-between">
                                                    <h5>@Html.DisplayFor(modelItem => item.FoodCatName)</h5>
                                            </div>
                                            <p>
                                                    @Html.DisplayFor(modelItem => item.FoodCatInfo)
                                            </p>
                                        </div>
                                    </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-xl-3">
                    <div class="row g-4 fruite">
                        <div class="col-lg-12">
                            <div class="input-group w-100 mx-auto d-flex mb-4">
                                 <form method="get" asp-page="./SearchShop">
                                    <input type="text" id="catTypeName" name="CatTypeName" class="form-control p-3" placeholder="keywords" aria-describedby="search-icon-1">
                                    <button type="submit" id="search-icon-1" class="input-group-text p-3"><i class="fa fa-search"></i></button>
                                </form>
                            </div>
                            <div class="mb-4">
                                <h4>Cat Categories</h4>
                                @foreach (var item in Model.CatTypes){
                                <ul class="list-unstyled fruite-categorie">
                                    <li>
                                        <div class="d-flex justify-content-between fruite-name">
                                                <a asp-page="./SearchShop" asp-route-CatTypeName="@item.CatTypeName"><i class="fas fa-paw me-2"></i>@Html.DisplayFor(modelItem => item.CatTypeName)</a>
